<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_my_user"
    tools:context=".fragment.MyUserFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"
        android:padding="20dp">
        <ImageView
            android:id="@+id/iv_avatar_my_user"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Tri Long"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/bungee"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_avatar_my_user"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_email_my_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trilong0610@gmail.com"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_name_user"
            android:layout_toRightOf="@id/iv_avatar_my_user"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-70dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:id="@+id/layout_change_info"
                android:padding="15dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thay đổi thông tin"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bungee"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_firstname_my_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Họ Tên"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_firstname_my_user"
                        android:focusedByDefault="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_passnew_my_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu mới"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_passnew_my_user"
                        android:focusedByDefault="false"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_repassnew_my_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập lại mật khẩu mới"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_repassnew_my_user"
                        android:focusedByDefault="false"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_change_info_my_user"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/black"
                    android:focusable="false"
                    android:text="Thay đổi thông tin"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

<!--    End thay doi thong tin-->

<!--    Thong bao link moi-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="7dp"
            android:layout_above="@id/btn_logout_my_user"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:text="Thông báo khi có link mới"
                    android:fontFamily="@font/bungee"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_new_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="false"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout_my_user"
            android:layout_above="@+id/txt_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            app:backgroundTint="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:text="Copyright © teooo.nt"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontFamily="@font/bungee"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>



</LinearLayout>