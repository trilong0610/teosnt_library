<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
            <!-- Media -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/textView_id_profile_front"
            android:text="ID:"/>
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:id="@+id/cardview_avt"
            android:layout_margin="5dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/background_item_user_avatar"
                    />
                <ImageView
                    android:id="@+id/iv_social"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|bottom"
                    android:layout_margin="8dp" />

                <TextView
                    android:id="@+id/tv_username_front_item_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="12dp"
                    android:text="roses_are_rosie"/>
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>


            <!--            Slide bar  -->
</LinearLayout>